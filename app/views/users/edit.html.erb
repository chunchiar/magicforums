<%= form_for(@user, url: user_path(@user), html: { id: "user-update-form" }) do |f| %>
  <h1 class="text-center">
    Edit Account
  </h1>

  <div class="form-group">
    <h4> <%= f.label :email_field, "Email" %> </h4>
    <%= f.text_field :email, required: true, id: "email_title_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :password_field, "Password" %> </h4>
    <%= f.text_field :password, id: "password_digest_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :username_field, "Username" %> </h4>
    <%= f.text_field :username, id: "username_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Update Account", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
