<div class="topics-parent text-center", id="posts">

  <% @posts.each do |post| %>
  <%= render partial: "post", locals: { post: post, topic: @topic } %>
  <% end %>

</div>

<div class="form-group text-center" id="posts-form-container">
  <%= link_to t('.New Post'), new_topic_post_path, :class => 'btn btn-success btn-lg'%>
</div>


<div class="text-center">
  <%= paginate @posts %>
</div>
