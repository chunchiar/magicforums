<%= form_for :user,url: sessions_path do |f| %>
<h1 class="text-center">
  Log In
</h1>

<div class="form-group">
  <h4> <%= f.label :email %> </h4>
  <%= f.text_field :email, required:true, id: "email_field", class: 'form-control' %>
</div>

<div class="form-group">
  <h4> <%= f.label  :password_field, "Password" %> </h4>
  <%= f.password_field :password, id: "password_digest_field", class: 'form-control' %>
</div>

<p><%= link_to "forgotten password?", new_password_reset_path %></p>

<div class="form-group text-center">
  <%= f.submit "Log In", class: "btn btn-success btn-lg" %>

</div>
<% end %>
