<div class="topics-parent text-center">
<% @posts.each do |post| %>
  <div class="centering">
    <h3><%= link_to post.title, topic_post_comments_path(@topic,post) %></h3>
    <h5><b><%= post.body %></b></h5>
    <%= link_to ('Edit Post'), edit_topic_post_path(@topic,post), :class => 'btn btn-success btn-lg'%>
    <%= link_to "Delete", topic_path(@topic),method: :delete, data: { confirm: "Delete?" } %>
  </div>
<% end %>
</div>

<div class="form-group text-center">
<%= link_to t('.New Post'), new_topic_post_path, :class => 'btn btn-success btn-lg'%>
</div>
